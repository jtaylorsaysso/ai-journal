# AI Journal Backend Environment Variables

# Flask
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database (PostgreSQL connection string for production)
# Render sets this automatically when you attach a PostgreSQL database
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:8080,https://*.github.io

# Rate Limiting
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_HOUR=50

# AI Settings
MAX_PROMPT_TOKENS=1000
MAX_RESPONSE_TOKENS=500
