# AI Journal Backend Environment Variables

# Flask
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database (PostgreSQL connection string for production)
# Render sets this automatically when you attach a PostgreSQL database
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Ollama LLM Settings (for local inference)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini
OLLAMA_TIMEOUT=60
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY=1.0

# Anthropic API (legacy - not used when Ollama is configured)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:8080,https://*.github.io

# Rate Limiting
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_HOUR=50

# AI Settings
MAX_PROMPT_TOKENS=1000
MAX_RESPONSE_TOKENS=500
